<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="../static/img/health.ico">
    <!-- Bootstrap CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
    *{
    margin:0;
    padding:0;
    font-family: 'Josefin Sans', sans-serif;
    }
    html,
    body,
    header,
    #intro {
    height: 100%;
    }
    img {
    display: block;
    max-width: 100%;
    height: auto;
    }
    </style>
    <title>Heart Prediction</title>
  </head>
  <body>
    <header>
      
      <!--Mask-->
      <div id="intro" class="container-fluid view ">
        <h1 class="text-center text-capitalize pt-5">Know your chances of getting Heart in one Click!</h1>
        <hr class="w-75 mx-auto pt-5">
        <div class="row mb-5">
          <div class="col-lg-6 col-md-6 col-12 my-auto">
            <img src="static/img/heart.jpeg" class="float-left">

          </div>
          <div class="col-lg-6 col-md-6 col-12">
            <form action="{{ url_for('predict')}}" method="post">
              <div class="form-group">
                <!-- TODO : Year to accept only year date picker -->
                <label for="age">Age</label>
                <input class="form-control" type="text"  required="required">
              </div>
              <div class="form-group">
                <label for="age">Sex</label>
                <input class="form-control" type="text"  required="required" placeholder="male=1;female=0">
              </div>
              <div class="form-group">
                <label for="cp">Chest pain type</label>
                <input class="form-control" type="text" required="required" placeholder="cp=0,1,2,3">
              </div>
              <div class="form-group">
                <label for="trbps">Resting blood pressure</label>
                <input class="form-control" type="text"  required="required" placeholder="in mm Hg">
              </div>
              <div class="form-group">
                <label for="chs">Serum cholestoral</label>
                <input class="form-control" type="text" required="required" placeholder="in mg/dl">
              </div>
              <div class="form-group">
                <label for="fps">Fasting blood sugar</label>
                <input class="form-control" type="text" required="required" placeholder="120 mg/dl 1,0">
              </div>
			  <div class="form-group">
                <label for="restecg">Resting electrocardiographic results</label>
                <input class="form-control" type="text" required="required" placeholder="1 or 0">
              </div>
			  <div class="form-group">
                <label for="mhra">Maximum heart rate achieved</label>
                <input class="form-control" type="text" required="required" >
              </div>
			  <div class="form-group">
                <label for="exc">Exercise induced angina</label>
                <input class="form-control" type="text" required="required" >
              </div>
			   <div class="form-group">
                <label for="stress">Exercise Induced ST</label>
                <input class="form-control" type="text" required="required" >
              </div>
              <div class="form-group">
                <label for="slope">The Slope</label>
                <input class="form-control" type="text" required="required" >
              </div>
			  <div class="form-group">
                <label for="vsl">Number of major vessels colored by flourosopy</label>
                <input class="form-control" type="text" required="required" placeholder="0-3" >
              </div>
			  <div class="form-group">
                <label for="thal">Thalassemia</label>
                <input class="form-control" type="text" required="required" placeholder="3 = normal; 6 = fixed defect; 7 = reversable defect3" >
              </div>            
              <button type="submit" class="btn btn-danger">Predict</button>
            </form>
          </div>
        </div>
      </div>
      <!--/.Mask-->
    </header>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
